<?xml version="1.0" encoding="UTF-8"?>

<Shell x:Class="MoneyFox.Ui.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:resources="clr-namespace:MoneyFox.Ui.Resources.Strings"
       xmlns:dashboard="clr-namespace:MoneyFox.Ui.Views.Dashboard"
       xmlns:overflowMenu="clr-namespace:MoneyFox.Ui.Views.OverflowMenu"
       xmlns:views="clr-namespace:MoneyFox.Ui.Views"
       xmlns:selector="clr-namespace:MoneyFox.Ui.Views.Statistics.Selector"
       Title="MoneyFox">

    <TabBar>
        <Tab Title="{x:Static resources:Translations.HomeTitle}">
            <Tab.Style>
                <Style TargetType="Tab">
                    <Style.Triggers>
                        <Trigger TargetType="Tab" Property="IsChecked" Value="True">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <FontImageSource Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                                                     Glyph="{x:Static views:IconFont.HomeOutline}"
                                                     FontFamily="MaterialIcons" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger TargetType="Tab" Property="IsChecked" Value="False">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <FontImageSource Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"
                                                     Glyph="{x:Static views:IconFont.HomeOutline}"
                                                     FontFamily="MaterialIcons" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Tab.Style>
            <ShellContent>
                <dashboard:DashboardPage />
            </ShellContent>
        </Tab>

        <Tab Title="{x:Static resources:Translations.StatisticsTitle}">
            <Tab.Style>
                <Style TargetType="Tab">
                    <Style.Triggers>
                        <Trigger TargetType="Tab" Property="IsChecked" Value="True">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <FontImageSource Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                                                     Glyph="{x:Static views:IconFont.ChartArc}"
                                                     FontFamily="MaterialIcons" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger TargetType="Tab" Property="IsChecked" Value="False">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <FontImageSource Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"
                                                     Glyph="{x:Static views:IconFont.ChartArc}"
                                                     FontFamily="MaterialIcons" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Tab.Style>
            <ShellContent Title="{x:Static resources:Translations.StatisticsTitle}">
                <selector:StatisticSelectorPage />
            </ShellContent>
        </Tab>

        <Tab Title="{x:Static resources:Translations.MoreTitle}">
            <Tab.Style>
                <Style TargetType="Tab">
                    <Style.Triggers>
                        <Trigger TargetType="Tab" Property="IsChecked" Value="True">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <FontImageSource Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                                                     Glyph="{x:Static views:IconFont.DotsHorizontal}"
                                                     FontFamily="MaterialIcons" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger TargetType="Tab" Property="IsChecked" Value="False">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <FontImageSource Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"
                                                     Glyph="{x:Static views:IconFont.DotsHorizontal}"
                                                     FontFamily="MaterialIcons" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Tab.Style>
            <ShellContent>
                <overflowMenu:OverflowMenuPage />
            </ShellContent>
        </Tab>
    </TabBar>

</Shell>